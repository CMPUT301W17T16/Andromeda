<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:text="Username"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:id="@+id/UsernameHolder"
            android:layout_width="252dp"
            android:layout_height="40dp"
            android:layout_weight="0.07"
            android:text="UsernameHolder"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Mood"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="0.21"
            android:text="Mood: "
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Spinner
            android:id="@+id/MoodSpinner"
            android:layout_width="248dp"
            android:layout_height="40dp"
            android:layout_weight="0.03"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/SocialSit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1.02"
            android:text="Social Situation:"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Spinner
            android:id="@+id/SocialSitSpinner"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Details"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:text="Details: "
            android:textAppearance="@android:style/TextAppearance.Large" />

        <EditText
            android:id="@+id/DetailsHOlder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:ems="10"
            android:hint="Details Holder"
            android:inputType="text" />

    </LinearLayout>

</LinearLayout>
