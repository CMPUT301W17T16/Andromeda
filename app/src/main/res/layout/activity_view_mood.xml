<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:text="Username" />

        <TextView
            android:id="@+id/UsernameHolder"
            android:layout_width="252dp"
            android:layout_height="40dp"
            android:text="UsernameHolder"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Date"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.21"
            android:text="Date: " />

        <EditText
            android:id="@+id/DateHolder"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.24"
            android:ems="10"
            android:inputType="date"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            tools:text="Pick a date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Mood"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.21"
            android:text="Mood: " />

        <EditText
            android:id="@+id/MoodHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:ems="10"
            android:hint="MoodHolder"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SocialSit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="Social Situation:" />

        <EditText
            android:id="@+id/SocialSitHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.17"
            android:ems="10"
            android:hint="SocialSitHolder"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Details"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:text="Details: " />

        <EditText
            android:id="@+id/DetailsHOlder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:ems="10"
            android:hint="Details Holder"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.21"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/LocationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:checked="false"
            android:splitTrack="true"
            android:switchMinWidth="30dp"
            android:text="Add Location"
            android:textAlignment="textStart"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <Button
            android:id="@+id/DeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="?attr/colorPrimaryDark"
            android:text="Delete"
            android:textSize="18sp" />

        <Button
            android:id="@+id/SaveButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="Save"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
